#include <stdio.h>
int global=100;
int main(void) 
{
	int local = 200;
	printf("the global variable value is %d",global);
	printf("the local variable value is %d",local);
 
	func1();
}
 
void func1()
{
	int local = 300;
	printf("the global variable value is%d",global);
	printf("the local variable value is %d",local);
}
